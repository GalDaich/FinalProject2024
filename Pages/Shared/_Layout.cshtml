<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripMatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripMatch.styles.css" asp-append-version="true" />
</head>
<body>
<header>
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/images/logo.png" alt="TripMatch Logo" class="img-fluid" />
            </a>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mt-3">
            <div class="container justify-content-center">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Username") == null)
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                            </li>
                        }
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark" asp-area="" asp-page="/SearchFriends">SearchFriends</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Profile">Profile</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Favourites">Favourites</a>
                            </li>
                        }
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-text">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <span>Hello @Context.Session.GetString("Username")</span>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TripMatch
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
